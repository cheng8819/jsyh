<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jsproducercreditcard.dao.LeaveInfoDao">

    <resultMap type="com.example.jsproducercreditcard.entity.LeaveInfo" id="LeaveInfoMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="loansid" column="loansid" jdbcType="VARCHAR"/>
        <result property="taskId" column="task_id" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="LeaveInfoMap">
        select
          id, status, loansid, task_id
        from jsyh.leave_info
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="LeaveInfoMap">
        select
          id, status, loansid, task_id
        from jsyh.leave_info
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="LeaveInfoMap">
        select
          id, status, loansid, task_id
        from jsyh.leave_info
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="loansid != null and loansid != ''">
                and loansid = #{loansid}
            </if>
            <if test="taskId != null and taskId != ''">
                and task_id = #{taskId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into jsyh.leave_info(id,status, loansid, task_id)
        values (#{id},#{status}, #{loansid}, #{taskId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update jsyh.leave_info
        <set>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="loansid != null and loansid != ''">
                loansid = #{loansid},
            </if>
            <if test="taskId != null and taskId != ''">
                task_id = #{taskId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from jsyh.leave_info where id = #{id}
    </delete>

</mapper>