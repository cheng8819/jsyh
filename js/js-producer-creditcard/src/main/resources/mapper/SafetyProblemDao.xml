<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jsproducercreditcard.dao.SafetyProblemDao">

    <resultMap type="com.example.jsproducercreditcard.entity.SafetyProblem" id="SafetyProblemMap">
        <result property="spid" column="spid" jdbcType="INTEGER"/>
        <result property="spname" column="spname" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SafetyProblemMap">
        select
          spid, spname
        from jsyh.safety_problem
        where spid = #{spid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SafetyProblemMap">
        select
          spid, spname
        from jsyh.safety_problem
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SafetyProblemMap">
        select
          spid, spname
        from jsyh.safety_problem
        <where>
            <if test="spid != null">
                and spid = #{spid}
            </if>
            <if test="spname != null and spname != ''">
                and spname = #{spname}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="spid" useGeneratedKeys="true">
        insert into jsyh.safety_problem(spname)
        values (#{spname})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update jsyh.safety_problem
        <set>
            <if test="spname != null and spname != ''">
                spname = #{spname},
            </if>
        </set>
        where spid = #{spid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from jsyh.safety_problem where spid = #{spid}
    </delete>

</mapper>