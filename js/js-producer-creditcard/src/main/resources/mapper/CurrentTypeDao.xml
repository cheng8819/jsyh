<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jsproducercreditcard.dao.CurrentTypeDao">

    <resultMap type="com.example.jsproducercreditcard.entity.CurrentType" id="CurrentTypeMap">
        <result property="ctid" column="ctid" jdbcType="INTEGER"/>
        <result property="ctname" column="ctname" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CurrentTypeMap">
        select
          ctid, ctname,ctimage
        from jsyh.current_type
        where ctid = #{ctid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CurrentTypeMap">
        select
          ctid, ctname,ctimage
        from jsyh.current_type
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CurrentTypeMap">
        select
          ctid, ctname,ctimage
        from jsyh.current_type
        <where>
            <if test="ctid != null">
                and ctid = #{ctid}
            </if>
            <if test="ctname != null and ctname != ''">
                and ctname = #{ctname}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="ctid" useGeneratedKeys="true">
        insert into jsyh.current_type(ctname)
        values (#{ctname})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update jsyh.current_type
        <set>
            <if test="ctname != null and ctname != ''">
                ctname = #{ctname},
            </if>
        </set>
        where ctid = #{ctid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from jsyh.current_type where ctid = #{ctid}
    </delete>

</mapper>