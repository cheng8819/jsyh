<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jsproducercreditcard.dao.CurrentAddressDao">

    <resultMap type="com.example.jsproducercreditcard.entity.CurrentAddress" id="CurrentAddressMap">
        <result property="caid" column="caid" jdbcType="INTEGER"/>
        <result property="caprovince" column="caprovince" jdbcType="VARCHAR"/>
        <result property="cacity" column="cacity" jdbcType="VARCHAR"/>
        <result property="cacounty" column="cacounty" jdbcType="VARCHAR"/>
        <result property="caaddress" column="caaddress" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CurrentAddressMap">
        select
          caid, caprovince, cacity, cacounty, caaddress
        from jsyh.current_address
        where caid = #{caid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CurrentAddressMap">
        select
          caid, caprovince, cacity, cacounty, caaddress
        from jsyh.current_address
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CurrentAddressMap">
        select
          caid, caprovince, cacity, cacounty, caaddress
        from jsyh.current_address
        <where>
            <if test="caid != null">
                and caid = #{caid}
            </if>
            <if test="caprovince != null and caprovince != ''">
                and caprovince = #{caprovince}
            </if>
            <if test="cacity != null and cacity != ''">
                and cacity = #{cacity}
            </if>
            <if test="cacounty != null and cacounty != ''">
                and cacounty = #{cacounty}
            </if>
            <if test="caaddress != null and caaddress != ''">
                and caaddress = #{caaddress}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="caid" useGeneratedKeys="true">
        insert into jsyh.current_address(caprovince, cacity, cacounty, caaddress)
        values (#{caprovince}, #{cacity}, #{cacounty}, #{caaddress})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update jsyh.current_address
        <set>
            <if test="caprovince != null and caprovince != ''">
                caprovince = #{caprovince},
            </if>
            <if test="cacity != null and cacity != ''">
                cacity = #{cacity},
            </if>
            <if test="cacounty != null and cacounty != ''">
                cacounty = #{cacounty},
            </if>
            <if test="caaddress != null and caaddress != ''">
                caaddress = #{caaddress},
            </if>
        </set>
        where caid = #{caid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from jsyh.current_address where caid = #{caid}
    </delete>

    <!--逐渐最大值-->
    <select id="maxById" resultType="java.lang.Integer">
        select max(caid)from current_address
    </select>
</mapper>